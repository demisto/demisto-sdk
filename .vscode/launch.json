{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: debug demisto-sdk",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/demisto_sdk/__main__.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "cwd": "${env:CONTENT}", // Predefine the CONTENT variable in your environment first!
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "args": [
                "lint",
                "-i",
                "Packs/AbnormalSecurity/Integrations/AbnormalSecurity",
            ]
        },
        {
            "name": "Python: Upload AbuseDB",
            "type": "python",
            "request": "launch",
            "module": "demisto_sdk",
            "cwd": "${env:CONTENT}", // Predefine the CONTENT variable in your environment first!
            "args": [
                "upload",
                "-i",
                "${env:CONTENT}/Packs/AbuseDB/Integrations/AbuseDB"
            ]
        },
        {
            "name": "Python: Lint AbuseDB with logs",
            "type": "python",
            "request": "launch",
            "module": "demisto_sdk",
            "cwd": "${env:CONTENT}",  // Predefine the CONTENT variable in your environment first!
            "args": [
                "lint",
                "-i",
                "${env:CONTENT}/Packs/AbuseDB/Integrations/AbuseDB",
                "-j",
                "${env:CONTENT}/.demisto-sdk-report"
            ]
        }
    ]
}
